#:import Window kivy.core.window.Window
FloatLayout:
    MainLayout:
        id: main_window_layout
        size: root.width, root.height-35
        GridLayout:
            size: root.width-2, root.height-35
            size_hint: None, None
            orientation: "tb-lr"
            rows: 2
            cols: 2
            MyGraph:
                id: basic_graph
                ylabel: "Amplitude"
                xlabel: "Hz"
                y_grid: True
                y_grid_label: True
                y_ticks_major: 0.5
                xmin: 18
                xmax: 22000
                ymin: -1
                ymax: 1
                xlog: True
                x_ticks_major: 0.1
                x_grid: True
                x_grid_label: True
            MyGraph:
                id: phase_graph
                grid: True
                ylabel: "Phase"
                xlabel: "Hz"
                y_grid: True
                y_grid_label: True
                y_ticks_major: 0.5
                xmin: 18
                xmax: 22000
                xlog: True
                x_ticks_major: 0.1
                x_grid_label: True
                ymin: -1
                ymax: 1