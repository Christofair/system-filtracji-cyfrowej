#:import Window kivy.core.window.Window
FloatLayout:
    MainLayout:
        id: main_window_layout
        size: root.width, root.height-35
        GridLayout:
            size: root.width-2, root.height-35
            size_hint: None, None
            orientation: "tb-lr"
            rows: 2
            cols: 2
            MyGraph:
                id: basic_graph
                ylabel: "Amplitude (dB)"
                xlabel: "freq (Hz)"
                y_grid: True
                y_grid_label: True
                xlog: True
                x_ticks_major: 0.1
