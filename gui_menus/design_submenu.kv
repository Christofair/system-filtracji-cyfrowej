#:import DesignMenu menus.DesignMenu
DesignMenu:
    ContextMenuTextItem:
        text: "Save Characteristic"
        on_release: app.get_concrete_menu(DesignMenu).save_profile()
    ContextMenuTextItem:
        text: "Load Characteristic"
        on_release: print('app.get_concrete_menu(DesignMenu).load_profile()')
    ContextMenuTextItem:
        text: "Reset profile"
        on_release: DesignMenu.reset_design_graph()
    ContextMenuTextItem:
        text: "interpolation (" + self.parent.interpolation + ")"
        ContextMenu:
            ContextMenuTextItem:
                text: "cubic"
                on_release: app.get_concrete_menu(DesignMenu).interpolation = self.text
            ContextMenuTextItem:
                text: "linear"
                on_release: app.get_concrete_menu(DesignMenu).interpolation = self.text
    ContextMenuTextItem:
        text: "Filter (" + self.parent.filter + ")"
        ContextMenu:
            id: filters_names_list
    ContextMenuTextItem:
        text: "Create filter"
        color: [1,0,0,1]
        on_release: app.get_concrete_menu(DesignMenu).create_filter_callback()
