FloatLayout:
    AnchorLayout:
        id: anchor_main_menu
        anchor_x: "left"
        anchor_y: "top"
        MainMenu:
            id: app_menu
            cancel_handler_widget: anchor_main_menu
            AppMenuTextItem:
                text: "FILE"
                main_menu: app_menu
                FileMenu:
                    id: file_menu
                    ContextMenuDivider:
                    ContextMenuTextItem:
                        text: "Open filter"
                        on_release: file_menu.open_filter_cb()
                    ContextMenuTextItem:
                        text: "Save filter"
                        on_release: file_menu.save_filter_cb()
                    ContextMenuDivider:
                    ContextMenuTextItem:
                        text: "Open audio file"
                        on_release: file_menu.open_audio_cb()
                    ContextMenuTextItem:
                        text: "Save audio file"
                        on_release: file_menu.save_audio_cb()
                    ContextMenuDivider:
                    ContextMenuTextItem:
                        text: "Exit"
                        on_release: file_menu.exit_option()
            AppMenuTextItem:
                text: "MODES"
                main_menu: app_menu
                # dynamic_menu: design_menu
                ModeMenu:
                    id: mode_menu
                    ContextMenuTextItem:
                        text: "Design"
                        on_release: mode_menu.choose_mode = 'design'
                    ContextMenuTextItem:
                        text: "Visualization"
                        on_release: mode_menu.choose_mode = 'visualization'
