#:import sin math.sin
BoxLayout:
    id: app_box_layout
    orientation: 'vertical'
    FloatLayout:
        size_hint: 1, 5
        id: app_menu_float_layout
        AppMenu:
            id: app_menu
            top: root.height
            cancel_handler_widget: app_box_layout
            AppMenuTextItem:
                text: 'Plik'
                ContextMenu:
                    index: 400
                    ContextMenuTextItem:
                        text: "Zapisz"
                        on_release: print('#saveUP')
                        on_press: print('#saveDN')
                    ContextMenuTextItem:
                        text: "Otw√≥rz"
                        on_release: print('#open')
            AppMenuTextItem:
                text: 'Filtr'
                ContextMenu:
                    ContextMenuTextItem:
                        text: "Item #11"
                    ContextMenuTextItem:
                        text: "Item #12"
            AppMenuTextItem:
                text: 'Edycja'
                ContextMenu:
                    ContextMenuTextItem:
                        text: "Item #11"
                    ContextMenuTextItem:
                        text: "Item #12"
            AppMenuTextItem:
                text: 'Exit'
    GridLayout:
            rows: 1
            cols: 1
            Graph:
                xlabel: 'X'
                ylabel: 'Y'
                x_ticks_minor: 5
                x_ticks_major: 25
                y_ticks_major: 1
                xmin: -0
                xmax: 100
                ymin: -1
                ymax: 1
                MeshLinePlot:
                    color: [1,0,0,1]
                    points: [(x, sin(x/10.)) for x in range(0,101)]